<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f4f4f4">
    
    <include layout="@layout/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"/>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/two_line_edit_top_shape">
        
        <EditText
            android:id="@+id/forgetpasswordphoneEdit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="    请输入您的手机号"
            android:background="@null"
            android:layout_alignParentLeft="true"/>
        
        <Button
            android:id="@+id/forgetpasswordphoneButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/round_button_shape"/>
        
    </RelativeLayout>
    
    <EditText
        android:id="@+id/forgetpasswordCAPTCHAEdit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/one_line_edit_shape"
        android:hint="    验证码"/>
    
    <EditText
        android:id="@+id/forgetpasswordPassordEdit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/one_line_edit_shape"
        android:hint="    请输入密码"/>
    
    <EditText
        android:id="@+id/forgetpasswordcomfirmpassordEdit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/one_line_edit_shape"
        android:hint="    请再次输入密码"/>
    
    <Button
        android:id="@+id/forgetpasswordfinishButton"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_button_shape"
        android:text="完成"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:textSize="16sp"/>
    

</LinearLayout>

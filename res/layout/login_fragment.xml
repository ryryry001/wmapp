<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4" >
    

    <include layout="@layout/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/two_line_edit_top_shape"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp">
            
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:src="@drawable/ic_launcher"/>
            
            <EditText 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="用户名"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/two_line_edit_bottom_shape"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp">
            
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:src="@drawable/ic_launcher"/>
            
            <EditText 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码"/>
            
        </LinearLayout>
        
        <Button 
            android:id="@+id/loginButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="登录"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="#ffffff"
            android:background="@drawable/round_button_shape"/>

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/forgetpasswordText"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="忘记密码？"
                android:textColor="#ff7f50"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:gravity="center|left"
                android:layout_weight="1"/>
            
            <TextView 
                android:id="@+id/fastloginText"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="快速登录"
                android:gravity="center|right"
                android:textSize="14sp"
                android:layout_marginRight="12dp"
                android:textColor="#ff7f50"
                android:layout_weight="1"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.5">
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:id="@+id/loginbottomlayout"
            android:orientation="horizontal"
            android:background="#cccccc"
            android:layout_alignParentBottom="true">
            
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher"/>
            
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.1"
                android:text="微博"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center|left"/>
            
            <TextView
                 android:layout_height="30dp"
                 android:layout_width="1dp"
                 android:background="#ffffff"/>
            
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher"/>
            
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.1"
                android:text="微信"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center|left"/>
            
        </LinearLayout>        
        
        <TextView 
            android:background="#cccccc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="第三方登录"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/loginbottomlayout"/>
        
    </RelativeLayout>
    
</LinearLayout>
